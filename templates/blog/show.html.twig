{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blog.body }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ blog.created ? blog.created|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Last_updated</th>
                <td>{{ blog.lastUpdated ? blog.lastUpdated|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    {% if app.user %}
    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>
    {% endif %}

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
